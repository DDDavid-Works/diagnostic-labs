<UserControl x:Class="DiagnosticLabs.UserControls.MessagesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiagnosticLabs.UserControls"
             mc:Ignorable="d" Background="{Binding MessageBoxColor}" BorderBrush="#ea9a62" BorderThickness="0,2,0,2">
    <Border>
        <StackPanel Visibility="{Binding NotificationMessagesVisibility}">
            <Label Name="MessageLabel" Content="{Binding NotificationMessages}"
                   FontSize="14" FontStyle="Italic" 
                   HorizontalAlignment="Right" HorizontalContentAlignment="Right"></Label>
        </StackPanel>
    </Border>
</UserControl>
